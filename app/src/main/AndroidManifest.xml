<?xml version="1.0" encoding="utf-8"?>
<manifest package="framgia.fsalon"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.framgia.fsalon.screen.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.framgia.fsalon.screen.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Register"/>
        <activity
            android:name="com.framgia.fsalon.screen.login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.framgia.fsalon.screen.detail.DetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>
